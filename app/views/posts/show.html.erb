<div class="row">
	<div class="col-md-4">
		<%= image_tag @post.post_img.url, class: "post-show" %>
	</div>

	<div class="col-md-8">
		<div class="book-info">
			<h2 class="book-title"><%= @post.title %></h2>
			<h3 class="book-author"><span>From </span><%= @post.author %></h3>
			<h2 class="avg-rating">Average Rating</h2>
			<div class="average-review-rating" data-score=<%= @average_review %>></div>
			<span class="number-of-reviews">Based on <%= @post.reviews.count %> reviews</span>
			<h4>Category: <%= @post.type.name %></h4>
			<p class="book-desc "><%= @post.description %></p>
		</div>
		<div class="reviews">
			<h1>Notes</h1>
			<%= render @post.reviews %>
			<div>
				<%= link_to "Add Note", new_post_review_path(@post), class: "btn btn-custom" %> 
				<br>
				<br>
			</div>

			<div class="links btn-group">
				<%= link_to "Back", root_path, class: "btn btn-custom" %>

					<% if user_signed_in? %>
						<% if @post.user_id == current_user.id %>
							<%= link_to "Edit", edit_post_path(@post), class: "btn btn-custom" %>
							<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>
						<% end %>
					<% end %>
			</div>		
		</div>
	</div>

</div>



<script>
	$('.review-rating').raty({
		readOnly: true, 
		score: function() {
			return $(this).attr('data-score');
		},
		path: '/assets/'
	});
</script>

<script>
	$('.average-review-rating').raty({
		readOnly: true, 
		path: '/assets/',
		score: function() {
			return $(this).attr('data-score')
		}
	})
</script>